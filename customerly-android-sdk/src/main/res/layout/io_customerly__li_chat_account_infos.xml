<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView android:id="@id/io_customerly__icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/io_customerly__ic_default_admin"
            android:contentDescription="@string/io_customerly__icon" />

        <TextView android:id="@id/io_customerly__cardaccount_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/io_customerly__bubble_account_textcolor"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            tools:text="Luca Micheli"
            tools:ignore="UnusedAttribute" />

        <TextView android:id="@id/io_customerly__cardaccount_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/io_customerly__bubble_account_textcolor"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            tools:text="CEO &amp; Founder"
            tools:ignore="UnusedAttribute"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView android:id="@id/io_customerly__cardaccount_motto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="The future belongs to those who believe in the beauty of their dreams."
            tools:ignore="UnusedAttribute" />

        <LinearLayout android:id="@id/io_customerly__cardaccount_location_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/io_customerly__ld_location"
                android:layout_marginRight="2.5dp"
                android:layout_marginEnd="2.5dp"
                tools:ignore="ContentDescription" />

            <TextView android:id="@id/io_customerly__cardaccount_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="#ff666666"
                tools:text="Dublin"
                tools:ignore="SmallSp,UnusedAttribute" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            <ImageView android:id="@+id/io_customerly__cardaccount_fb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/io_customerly__btn_facebook"
                android:tint="#999999"
                android:layout_margin="10dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:ignore="ContentDescription" />

            <ImageView android:id="@+id/io_customerly__cardaccount_twitter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/io_customerly__btn_twitter"
                android:tint="#999999"
                android:layout_margin="10dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:ignore="ContentDescription" />

            <ImageView android:id="@+id/io_customerly__cardaccount_linkedin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/io_customerly__btn_linkedin"
                android:tint="#999999"
                android:layout_margin="10dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:ignore="ContentDescription" />

            <ImageView android:id="@+id/io_customerly__cardaccount_instagram"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/io_customerly__btn_instagram"
                android:tint="#999999"
                android:layout_margin="10dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

